    <scriptincludes>
        <scriptinclude>../scripts</scriptinclude>
    </scriptincludes>

    <include>morerules.xml</include>

    <rules>
        <rule>
            <name>Simple</name>
            <description>This is awesome</description>
            <filter>
                <datatype>struct</datatype>
                <typename>foo</typename>
                <fields>
                    <field />
                    <field match="regex">i|p</field>
                </fields>
            </filter>
            <action src="inline">
                // var inst = instance to check
                // var name = name of struct
                // var member = name of member
                include("check-foobar.js");
                if (1 &amp;&amp; 2) return true;
                checkFooBar(inst);
            </action>
        </rule>

        <rule architecture="x86" os="linux" minversion="2.6.12" maxversion="2.6.38">
            <name>Wildcards</name>
            <filter>
                <datatype>struct,union</datatype>
                <variablename match="wildcard">__percpu__*</variablename>
                <typename>bar</typename>
                <fields>
                    <field>bar</field>
                </fields>
            </filter>
            <action src="file" file="samplerule.js">println</action>
        </rule>
    </rules>
</typeknowledge>
